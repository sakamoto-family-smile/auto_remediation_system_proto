# Auto Remediation System 環境変数設定例

# === 基本設定 ===
DEBUG=true
SECRET_KEY=your-very-secure-secret-key-here
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# === データベース設定 ===
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/auto_remediation
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# === Google Cloud設定 ===
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
VERTEX_AI_LOCATION=asia-northeast1
VERTEX_AI_MODEL=claude-3-sonnet@001

# === Firebase設定 ===
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-admin.json

# === cursor-cli設定 ===
CURSOR_API_KEY=your-cursor-api-key-here
CURSOR_CLI_TIMEOUT=300

# === GitHub設定 ===
GITHUB_TOKEN=your-github-token-here
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# === Slack設定 ===
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CHANNEL_ALERTS=#dev-auto-fixes

# === 監視・ログ設定 ===
LOG_LEVEL=INFO
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=365

# === システム設定 ===
MAX_CONCURRENT_REMEDIATIONS=5
REMEDIATION_TIMEOUT_MINUTES=30

# === セキュリティ設定 ===
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
